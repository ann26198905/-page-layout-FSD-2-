          .wrap-flex-sb
            img.logotype.logotype__position(src="../src/img/Logo.png" alt="logotype") 
            //-элем-т флекс конт-ра
            .wrap-flex-row
              nav.header__menu 
                ul.menu-list
                  li.menu-list__li
                    a.link.link--active(href="#") Home
                  li.menu-list__li
                    a.link(href="#") About us
                  li.menu-list__li.topmenu
                    a.link.expand-more(href="#") Services
                    ul.menu-list.submenu 	
                      li.menu-list__li.services 
                        a.link(href="#") Services1
                      li.menu-list__li.services 
                        a.link(href="#") Services2
                      li.menu-list__li.services 
                        a.link(href="#") Services3
                  li.menu-list__li
                    a.link(href="#") Careers
                  li.menu-list__li
                    a.link(href="#") News
                  li.menu-list__li
                    a.link(href="#") Documentation
              button.btn.btn__position.btn--color--white.btn--size--a Login
              button.btn.btn__position.btn--color--gradulated.btn--size--c Register
